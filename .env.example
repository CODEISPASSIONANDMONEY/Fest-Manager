# Example environment variables for production
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-database-host.com
DB_PORT=3306
DB_NAME=fest_manager
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# Security Secrets (Generate random strings!)
# You can generate secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-a-random-secret-here
SESSION_SECRET=generate-another-random-secret-here

# Application URLs
CLIENT_URL=https://your-app-url.com

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@festmanager.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-url.com,https://your-app-url.com
